#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>

// Define scroll speed before including pointing header
#define ZMK_POINTING_DEFAULT_SCRL_VAL 20

// Include pointing device bindings for mouse scroll
#include <dt-bindings/zmk/pointing.h>

#define BASE 0
#define LOWER 1
#define RAISE 2
#define NAV 3
#define WORK 4
#define SYSTEM 5
#define RESIZE_LAYER 6
#define RESIZE_SHIFT 7
#define ENCODER_DIR 10

/ {
    // Activate SYSTEM layer by pressing nav and work layers together

    conditional_layers {
        compatible = "zmk,conditional-layers";

        system_layer {
            if-layers = <3 4>;
            then-layer = <5>;
        };

        resize_shift_condition {
            if-layers = <6 1>;  // RESIZE_LAYER and LOWER (using LOWER as shift indicator)
            then-layer = <7>;   // RESIZE_SHIFT layer
        };
    };

    behaviors {
        // Mouse scroll encoder behavior with proper timing
        encoder_scroll: encoder_scroll {
            compatible = "zmk,behavior-sensor-rotate";
            #sensor-binding-cells = <0>;
            bindings = <&msc SCRL_UP>, <&msc SCRL_DOWN>;
            tap-ms = <20>;  // Critical: prevents encoder silence by extending tap duration
        };

        mute_mod: mute_mod {
            compatible = "zmk,behavior-hold-tap";
            label = "MUTE_MOD";
            #binding-cells = <2>;
            flavor = "hold-preferred";
            tapping-term-ms = <200>;
            bindings = <&mo>, <&kp>;
        };

        space_mod: space_mod {
            compatible = "zmk,behavior-hold-tap";
            label = "SPACE_MOD";
            #binding-cells = <2>;
            flavor = "hold-preferred";
            tapping-term-ms = <200>;
            bindings = <&mo>, <&kp>;
        };

        td_layer_nav: tap_dance_layer_nav {
            compatible = "zmk,behavior-tap-dance";
            #binding-cells = <0>;
            tapping-term-ms = <200>;
            bindings = <&mo LOWER>, <&mo NAV>;
        };

        td_layer_work: tap_dance_layer_work {
            compatible = "zmk,behavior-tap-dance";
            #binding-cells = <0>;
            tapping-term-ms = <200>;
            bindings = <&mo RAISE>, <&mo WORK>;
        };

        // Special encoder behaviors for resize functionality

        resize_encoder_lr: resize_encoder_lr {
            compatible = "zmk,behavior-sensor-rotate";
            #sensor-binding-cells = <0>;
            bindings = <&kp LEFT>, <&kp RIGHT>;
        };

        resize_encoder_ud: resize_encoder_ud {
            compatible = "zmk,behavior-sensor-rotate";
            #sensor-binding-cells = <0>;
            bindings = <&kp DOWN>, <&kp UP>;
        };

        // App switching encoder behaviors

        app_switch_encoder: app_switch_encoder {
            compatible = "zmk,behavior-sensor-rotate";
            #sensor-binding-cells = <0>;
            bindings = <&kp LA(LS(TAB))>, <&kp LA(TAB)>;
        };

        workspace_switch_encoder: workspace_switch_encoder {
            compatible = "zmk,behavior-sensor-rotate";
            #sensor-binding-cells = <0>;
            bindings = <&kp LG(LS(TAB))>, <&kp LG(TAB)>;
        };

        // Screenshot macro

        meta_shift_s: meta_shift_s {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings =
                <&macro_press>,
                <&kp LGUI &kp LSHFT>,
                <&macro_tap>,
                <&kp S>,
                <&macro_release>,
                <&kp LGUI &kp LSHFT>;

            label = "META_SHIFT_S";
        };

        // Windows terminal launcher

        launch_terminal: launch_terminal {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings =
                <&macro_press>,
                <&kp LGUI>,
                <&macro_tap>,
                <&kp T>,
                <&macro_release>,
                <&kp LGUI>;

            label = "LAUNCH_TERMINAL";
        };

        wkup: wkup {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings =
                <&macro_pause_for_release>,
                <&kp LEFT_GUI &kp LCTRL>,
                <&macro_press>,
                <&kp DOWN>,
                <&macro_release>;

            label = "WKUP";
        };

        ctrlAltDel: ctrlAltDel {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings =
                <&macro_press>,
                <&kp LCTRL &kp LEFT_ALT>,
                <&macro_tap>,
                <&kp DEL>,
                <&macro_release>,
                <&kp LCTRL &kp LEFT_ALT>;

            label = "CTRLALTDEL";
        };

        ctrlAltPause: ctrlAltPause {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings =
                <&macro_press>,
                <&kp LCTRL &kp LALT>,
                <&macro_tap>,
                <&kp PAUSE_BREAK>,
                <&macro_release>,
                <&kp LCTRL &kp LALT>;

            label = "CTRLALTPAUSE";
        };

        ctrlAltEnd: ctrlAltEnd {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings =
                <&macro_press>,
                <&kp LCTRL &kp LALT>,
                <&macro_tap>,
                <&kp END>,
                <&macro_release>,
                <&kp LCTRL &kp LALT>;

            label = "CTRLALTEND";
        };

        // Windows System Management

        wn_task: wn_task {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings =
                <&macro_press>,
                <&kp LCTRL &kp LSHFT>,
                <&macro_tap>,
                <&kp ESC>,
                <&macro_release>,
