                <&kp LGUI>,
                <&macro_tap>,
                <&kp G>,
                <&macro_release>,
                <&kp LGUI>;

            label = "CS_FLOAT";
        };

        cs_max: cs_max {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings =
                <&macro_press>,
                <&kp LGUI>,
                <&macro_tap>,
                <&kp M>,
                <&macro_release>,
                <&kp LGUI>;

            label = "CS_MAX";
